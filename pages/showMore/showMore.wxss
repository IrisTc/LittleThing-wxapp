/* pages/showMore/showMore.wxss */
.container{
  margin: 60rpx 40rpx;
  font-size: 14px;
}
.item {
  margin-bottom: 60rpx;
}
.item input{
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 10px;
  height: 80rpx;
  margin: 20rpx 0;
  padding: 0 15rpx;
}
.wrapper {
  margin-top: 20rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  height: 350rpx;
}
.wrapper scroll-view{
  height: 100%;
  width: auto;
  overflow: hidden;
}
.flex {
  width: 274%;
  display: flex;
  flex-direction: column;
  flex-flow: wrap;
}
.colorActive {
  border: 1px solid #000;
}
.imageActive {
  background-color: rgba(185, 174, 174, 0.178);
  border-radius: 10rpx;
}
.circle {
  display: inline-block;
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
  margin: 10rpx 15rpx;

}
.icon {
  display: inline-block;
  height: 80rpx;
  width: 80rpx;
  margin: 10rpx 15rpx;
}
.types{
  margin: 20rpx 0;
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.type{
  display: inline-block;
}
.cu-tag{
  margin-right: 20rpx;
  padding: 0 30rpx;
}
.button{
  text-align: center;
}
.button button{
  margin-bottom: 20rpx;
}
.tip{
  width: 50%;
}
.icon{
  margin-left: 10rpx;
  font-size: 52rpx;
}