/* pages/today/today.wxss */
page{
  background-color: #518459;
}
.bg-image {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.top {
  position: fixed;
  z-index: 100;
  top: 0;
  width: 100%;
  height: 220rpx;
  background-color: #7EBE60;
}
.top .title {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-80rpx);
  font-size: 36rpx;
  font-weight: 700;
  color: white;
}

.top-header {
  position: absolute;
  top: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.top-header .search {
  width: 400rpx;
  height: 50rpx;
  background-color: #fff;
  padding-left: 15rpx;
  color: black;
}

.search .input{
  font-size: 36rpx;
  line-height: 50rpx;
}
.top-header .add{
  font-size: 48rpx;
}
.top-header .remind{
  font-size: 48rpx;
}
.contain{
  margin-top: 220rpx;
}
.list{
  margin: 40rpx;
  margin-top: 0;
  overflow: hidden;
  height: 100%;
}
.item {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10%;
  text-align: center;
  margin-bottom: 80rpx;
}
.item image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 40rpx;
}
.item-name{
  width: 180rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 100;
  margin-top: 10rpx;
}
.item-count{
  width: 180rpx;
  font-size: 22rpx;
  color: white;
}
.cardshow{
  display: block;
}
.cardhidden{
  display: none;
}